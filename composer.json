{
  "name": "spatial/spatial",
  "description": "PHP7+ WebAPI Clean Architecture Framework.",
  "version": "2.0.0",
  "type": "project",
  "keywords": [
    "Clean Architecture",
    "Spatial",
    "framework",
    "api"
  ],
  "homepage": "https://github.com/air-Design/cqured",
  "readme": "https://github.com/air-Design/cqured/blob/master/README.md",
  "time": "2018/10/14",
  "license": "MIT",
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "lcobucci/jwt": "4.0.x-dev",
    "spatial/doctrine": "dev-master",
    "spatial/mediator": "dev-master",
    "spatial/core": "dev-main",
    "symfony/yaml": "^5.1"
  },
  "authors": [
    {
      "name": "Kofi Owusu-Afriyie",
      "email": "airdesign.code@gmail.com",
      "homepage": "https://github.com/air-Design",
      "role": "Developer"
    }
  ],
  "suggest": {
    "lcobucci/jwt": "Generate Json Web Tokens for Authentication"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Presentation\\": "src/presentation/",
      "Common\\": "src/common/",
      "Core\\": "src/core/",
      "Infrastructure\\": "src/infrastructure/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpstan/phpstan": "^0.12.62"
  },
  "scripts": {
    "ci": [
      "@phpcs",
      "@test"
    ],
    "phpstan": "phpstan analyse src --level=0",
    "phpcs": "phpcs --standard=PSR12 src",
    "test": "phpunit",
    "phpcbf": "phpcbf --standard=PSR12 src",
    "db:update": "doctrine orm:schema-tool:update --force"
  }
}

